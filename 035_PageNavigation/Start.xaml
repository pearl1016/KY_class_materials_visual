<Page x:Class="_035_PageNavigation.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_035_PageNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Start">

    <Grid Background="Ivory">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnInfor" Height="50" Width="80" Margin="20 0 20 0"
                    Content="information" Click="btnInfor_Click"/>
            <Button x:Name="btnLogin" Height="50" Width="80" Margin="0 0 20 0" 
                    Content="Login" Click="btnLogin_Click"/>
            <Button x:Name="btnSignUp" Height="50" Width="80" Margin="0 0 20 0" 
                    Content="Signup" Click="btnSignUp_Click"/>
        </StackPanel>
    </Grid>
</Page>
