<Page x:Class="_035_PageNavigation.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_035_PageNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Login">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Login" HorizontalAlignment="Center" 
                   FontSize="20" FontWeight="Bold" Margin="30"/>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="ID: " Width="60" Margin=" 0 0 10 0"/>
            <TextBox Height="15" Width="150" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Password: "  Width="60" Margin=" 0 0 10 0" />
            <TextBox Height="15" Width="150"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Width="50" Margin=" 0 0 20 0" />
            <Button Content="Login" Width="150" Height="30"/>
        </StackPanel>
    </StackPanel>
</Page>
