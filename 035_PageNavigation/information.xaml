<Page x:Class="_035_PageNavigation.information"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_035_PageNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="information">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Information" HorizontalAlignment="Center" 
                   FontSize="20" FontWeight="Bold" Margin="30"/>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Email: " Margin=" 0 0 10 0"/>
            <TextBox Height="15" Width="150" Margin="4 0 0 0"/>
         </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Name: " Margin=" 0 0 10 0" />
            <TextBox Height="15" Width="150"/>
        </StackPanel>
    </StackPanel>
</Page>
