<Window x:Class="_034_TwoWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_034_TwoWindows"
        mc:Ignorable="d"
        Title="Two Window" Height="250" Width="400" Background="AliceBlue">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                Orientation="Horizontal">
        <Button x:Name="btnShow" Content="Show()-Modaless"
                Height="40" Width="120" Margin="0 0 50 0" Click="btnShow_Click"/>
        <Button x:Name="btnShowDialog" Content="ShowDialog()-Modal"
                Height="40" Width="120" Click="btnShowDialog_Click"/>
    </StackPanel>
</Window>
