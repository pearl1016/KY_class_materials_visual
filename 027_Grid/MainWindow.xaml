<Window x:Class="_027_Grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_027_Grid"
        mc:Ignorable="d"
              Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Margin="10 10 10 5" Grid.Row="0">Click me! 1</Button>
        <Button Margin="10 5 10 5" Grid.Row="1">Click me! 2</Button>
        <Button Margin="10 5 10 10" Grid.Row="2">Click me! 3</Button>
    </Grid>

</Window>
